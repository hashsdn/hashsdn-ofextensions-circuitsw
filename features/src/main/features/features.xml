<features name="odl-circuitsw-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">
  <repository>mvn:org.opendaylight.yangtools/features-yangtools/${yangtools.version}/xml/features</repository>
  <repository>mvn:org.opendaylight.controller/features-mdsal/${mdsal.version}/xml/features</repository>
  <repository>mvn:org.opendaylight.controller/features-restconf/${mdsal.version}/xml/features</repository>
  <feature name='odl-circuitsw-api' version='${project.version}' description='OpenDaylight :: circuitsw :: api'>
    <feature version='${yangtools.version}'>odl-yangtools-models</feature>
    <bundle>mvn:org.opendaylight.ofextensions.circuitsw/circuitsw-api/${project.version}</bundle>
  </feature>
  <feature name='odl-circuitsw' version='${project.version}' description='OpenDaylight :: circuitsw'>
    <feature version='${mdsal.version}'>odl-mdsal-broker</feature>
    <feature version='${project.version}'>odl-circuitsw-api</feature>
    <bundle>mvn:org.opendaylight.ofextensions.circuitsw/circuitsw-impl/${project.version}</bundle>
    <configfile finalname="${configfile.directory}/circuitsw.xml">mvn:org.opendaylight.ofextensions.circuitsw/circuitsw-impl/${project.version}/xml/config</configfile>
  </feature>
  <feature name='odl-circuitsw-rest' version='${project.version}' description='OpenDaylight :: circuitsw :: REST'>
    <feature version="${project.version}">odl-circuitsw</feature>
    <feature version="${mdsal.version}">odl-restconf</feature>
  </feature>
  <feature name='odl-circuitsw-ui' version='${project.version}' description='OpenDaylight :: circuitsw :: UI'>
    <feature version="${project.version}">odl-circuitsw-rest</feature>
    <feature version="${mdsal.version}">odl-mdsal-apidocs</feature>
    <feature version="${mdsal.version}">odl-mdsal-xsql</feature>
  </feature>

</features>
